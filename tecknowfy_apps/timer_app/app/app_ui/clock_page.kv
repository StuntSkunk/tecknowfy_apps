        #
        # This GridLayout is the layout for the rest of the screen
        GridLayout:
            cols: 1
            #
            # This GridLayout is the layout for the header
            GridLayout:
                cols: 2
                size_hint: (1, None)
                height: root.header_height
                background_color: root.header_background

                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        pos: self.pos
                        size: self.size
                # 
                # This GridLayout is for the layout logo and title of the screen
                GridLayout:
                    rows: 1
                    padding: (80, 0)
                    spacing: (20, 0)
                    size_hint: (None, 1)
                    width: self.minimum_width
                    # 
                    # This Image is the logo for the app
                    Image:
                        width: 60
                        size_hint: (None, 1)
                        source: "app_media/icon.png"
                    # 
                    # This Label is for the title of the header
                    Label:
                        bold: True
                        size_hint: (None, .1)
                        color: (1, 1, 1, 1)
                        text: "World Clock"
                        font_size: self.height / 3
                        width: self.texture_size[0]
                # 
                # This GridLayout is the layout for the user profile
                GridLayout:
                    cols: 1
                # 
                # This is a divider between header an rest of body
                GridLayout:
                    cols: 1
                    height: 1
                    size_hint: (1, None)
                    canvas.before:
                        Color:
                            rgba: (0, 0, 0, 1)
                        Rectangle:
                            pos: self.pos
                            size: self.size
            #
            # This GridLayout is the layout for the body
            GridLayout:
                cols: 1
                # 
                # This Label is for the current time
                Label:
                    height: 140
                    font_size: 40
                    color: (0, 0, 0, 1)
                    size_hint: (1, None)
                    text: "Canada (Default)"
                # 
                # This GridLayout is the divider between country settings and current date and time
                GridLayout:
                    cols: 1
                    height: 1
                    size_hint: (1, None)
                    canvas.before:
                        Color:
                            rgba: (0, 0, 0, 1)
                        Rectangle:
                            pos: self.pos
                            size: self.size
                # 
                # This GridLayout is the rest of the clock and country settings
                GridLayout:
                    cols: 3
                    # 
                    # This GridLayout is the layout for the current date and time
                    GridLayout:
                        cols: 1
                        padding: (0, 150)
                        spacing: (0, 100)
                        # 
                        # This Label is for the date
                        Label:

                            font_size: 60
                            text: "May 11, 2022"
                            size_hint: (1, None)
                            height: self.texture_size[1]
                            color: (80/255, 80/255, 80/255, 1)
                        # This Label is for the current time
                        Label:
                            index: 441
                            markup: True
                            font_size: 100
                            color: (0, 0, 0, 1)
                            size_hint: (1, None)
                            height: self.texture_size[1]
                            text: "2:35:22 [color=#646464]PM[/color]"
                    # 
                    # This GridLayout is a divider between two GridLayouts
                    GridLayout:
                        cols: 1
                        width: 1
                        size_hint: (None, 1)
                        canvas.before:
                            Color:
                                rgba: (0, 0, 0, 1)
                            Rectangle:
                                pos: self.pos
                                size: self.size                                
                    # 
                    # This GridLayout is the divider between country settings and current date and time
                    GridLayout:
                        cols: 1
                        # 
                        # This is just white space
                        HB_Spacer:
                            height: 50
                        # 
                        # This GridLayout is the layout for the world countries form
                        GridLayout:
                            cols: 2
                            padding: (50, 0)
                            size_hint: (1, None)
                            height: self.minimum_height
                            #
                            # This Label is the label for the world countries form
                            Label:
                                font_size: 35
                                size_hint: (.4, 1)
                                text: "Select Country"
                                color: (100/255, 100/255, 100/255, 1)
                            # 
                            # This TextInput is the input for the world countries form
                            HB_TextInput:
                                height: 100
                                multiline: False
                                size_hint: (.6, None)
                                font_divider: ["/", 2]
                                on_focus: root.menu(self)
                        # 
                        # This is the world menu
                        GridLayout:
                            id: world_country_menu_layout
                            cols: 1
                            height: 50
                            size_hint: (1, None)
                        # Just white space
                        HB_Spacer:
                            size_hint: (1, 1)
                        # 
                        # This GridLayout is for the buttons
                        GridLayout:
                            cols: 3
                            height: 120
                            padding: (50, 0)
                            spacing: (20, 0)
                            size_hint: (1, None)
                            # 
                            # Just some white space
                            HB_Spacer:
                            # 
                            # This is the restore default time zone
                            HB_Label:
                                # Custom Parameters
                                radius: 5
                                hover: True
                                change_color: True
                                responsive_text: False
                                font_divider: ["/", 8]
                                hover_color_t: (1, 1, 1, 1)
                                normal_color_t: (1, 1, 1, 1)
                                hover_color_b: (75/255, 184/255, 81/255, 1)
                                normal_color_b: (148/255, 90/255, 230/255, 1)
                                # Actual Parameters
                                width: 220
                                height: 100
                                text: "Save"
                                font_size: 30
                                size_hint: (None, None)
                            # 
                            # This is the restore default time zone
                            HB_Label:
                                # Custom Parameters
                                radius: 5
                                hover: True
                                change_color: True
                                responsive_text: False
                                font_divider: ["/", 8]
                                hover_color_t: (1, 1, 1, 1)
                                normal_color_t: (1, 1, 1, 1)
                                hover_color_b: (235/255, 64/255, 52/255, 1)
                                normal_color_b: (125/255, 20/255, 12/255, 1)
                                # Actual Parameters
                                width: 220
                                height: 100
                                text: "Reset"
                                font_size: 30
                                size_hint: (None, None)  
                        # 
                        # Just some white space
                        HB_Spacer:
                            height: 20
                # 
                # This GridLayout is the layout for quick world time navigation
                GridLayout:
                    id: quick_time_zone_navigation
                    cols: 4
                    height: 200
                    padding: (50, 0)
                    size_hint: (1, None)
                    # 
                    # This GridLayout is the layout for a selecting a different timezone
                    GridLayout:
                        cols: 1
                        size_hint: (None, 1)
                        background_color: (240/255, 240/255, 240/255, 1)
                        width: int(quick_time_zone_navigation.width) / 4 - 25
                        canvas.before:
                            Color:
                                rgba: self.background_color
                            Rectangle:
                                pos: self.pos
                                size: self.size                    
                # 
                # This is the navigation for the other screens
                GridLayout:
                    cols: 1
                    height: 100
                    size_hint: (1, None)
                    canvas.before:
                        Color:
                            rgba: (0, 0, 1, 1)
                        Rectangle:
                            pos: self.pos
                            size: self.size
            #
            # This GridLayout is the layout for the footer
            GridLayout:
                cols: 1
                size_hint: (1, None)
                height: root.footer_height
                background_color: root.footer_background

                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        pos: self.pos
                        size: self.size