#:kivy 2.1

# ------------------------------------------------------------------------------- #
#                                                                                 #
#                                  Home Page Class                                #
#                                                                                 #
# ------------------------------------------------------------------------------- #

# Home_Page is the name of the entire user interface for the home page
<Home_Page>:

    # This GridLayout is the layout for the Home_Page
    GridLayout:
        cols: 1
        background_color: (1, 1, 1, 1)

        canvas.before:
            Color:
                rgba: self.background_color
            Rectangle:
                pos: self.pos
                size: self.size

        # This GridLayout is the layout for the Menu Bar
        GridLayout:
            rows: 1
            height: 0
            size_hint: (1, None)
            background_color: (210/255, 210/255, 210/255, 1)

            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    pos: self.pos
                    size: self.size
            #
            # This GridLayout is the layout for the Menu Options
            GridLayout:
                rows: 2
                size_hint: (.3, 1)
                #
                # This GridLayout is the layout for the Menu Navigation            
                GridLayout:
                    rows: 1
                    padding: (40, 0)
                    spacing: (40, 0)

                    HB_Label:
                        # Custom Parameters
                        radius: 100
                        hover: True
                        change_color: True
                        font_divider: ["/", 3.5]
                        hover_color_t: (167/255, 105/255, 255/255, 1)
                        normal_color_t: (0, 0, 0, 1)
                        hover_color_b: (75/255, 184/255, 81/255, 0)
                        normal_color_b: (148/255, 90/255, 230/255, 0)
                        # Actual Parameters
                        text: "File"
                        size_hint: (1, 1)

                    HB_Label:
                        # Custom Parameters
                        radius: 100
                        hover: True
                        change_color: True
                        font_divider: ["/", 3.5]
                        hover_color_t: (167/255, 105/255, 255/255, 1)
                        normal_color_t: (0, 0, 0, 1)
                        hover_color_b: (75/255, 184/255, 81/255, 0)
                        normal_color_b: (148/255, 90/255, 230/255, 0)
                        # Actual Parameters
                        text: "Edit"
                        size_hint: (1, 1)

                    HB_Label:
                        # Custom Parameters
                        radius: 100
                        hover: True
                        change_color: True
                        font_divider: ["/", 3.5]
                        hover_color_t: (167/255, 105/255, 255/255, 1)
                        normal_color_t: (0, 0, 0, 1)
                        hover_color_b: (75/255, 184/255, 81/255, 0)
                        normal_color_b: (148/255, 90/255, 230/255, 0)
                        # Actual Parameters
                        text: "View"
                        size_hint: (1, 1)

                    HB_Label:
                        # Custom Parameters
                        radius: 100
                        hover: True
                        change_color: True
                        font_divider: ["/", 3.5]
                        hover_color_t: (167/255, 105/255, 255/255, 1)
                        normal_color_t: (0, 0, 0, 1)
                        hover_color_b: (75/255, 184/255, 81/255, 0)
                        normal_color_b: (148/255, 90/255, 230/255, 0)
                        # Actual Parameters
                        text: "Help"
                        size_hint: (1, 1)
                #
                # This GridLayout is the layout for the Menu Dropdown            
                GridLayout:
                    rows: 1
                    height: 1
                    size_hint: (1, None)
            #
            # This GridLayout is the layout for the Menu Space
            GridLayout:
                cols: 1
                size_hint: (.7, 1)
        #
        # This GridLayout is the layout for the rest of the screen
        GridLayout:
            cols: 1
            #
            # This GridLayout is the layout for the header
            GridLayout:
                cols: 1
                size_hint: (1, None)
                height: root.header_height
                background_color: root.header_background

                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        pos: self.pos
                        size: self.size
            #
            # This GridLayout is the layout for the body
            GridLayout:
                cols: 2
                # 
                # This GridLayout is the left column of the body
                GridLayout:
                    cols: 1
                    background_color: (235/255, 231/255, 248/255, 1)
                    canvas.before:
                        Color:
                            rgba: self.background_color
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    # 
                    # This is the layout and image for the homepage
                    RelativeLayout:
                        CoverImage:
                            source: "app_media/homepage.jpg"
                            pos_hint: {"center_x": .5, "center_y": .5}
                #
                # This GridLayout is the right column of the body
                GridLayout:
                    cols: 1
                    padding: 50
                    # 
                    # This is just some white space
                    HB_Spacer_M:
                        height: 50
                    # 
                    # This Label is the welcome label for the homepage
                    Label:
                        height: 60
                        halign: "left"
                        size_hint: (1, None)
                        text_size: self.size
                        font_size: self.height / 1.7
                        color: (50/255, 50/255, 50/255, 1)
                        text: "Welcome to TecKnowfy Timer"
                    # 
                    # This is just some white space
                    HB_Spacer_M:
                        height: 50
                    # 
                    # This Label is the login text for the homepage
                    Label:
                        bold: True
                        height: 60
                        text: "Login"
                        halign: "left"
                        size_hint: (1, None)
                        text_size: self.size
                        font_size: self.height / 1.1
                        color: (167/255, 105/255, 255/255, 1)
                    # 
                    # This is just some white space
                    HB_Spacer_M:
                        height: 100
                    # 
                    # This Label is the login text for the homepage
                    Label:
                        bold: True
                        height: 40
                        text: "Username"
                        halign: "left"
                        size_hint: (1, None)
                        text_size: self.size
                        font_size: self.height / 1.3
                        color: (50/255, 50/255, 50/255, 1)
                    # 
                    # This is just some white space
                    HB_Spacer_M:
                        height: 20
                    # 
                    # This TextInput is the email input for the homepage
                    HB_TextInput:
                        size_hint: (1, None)
                        height: 100
                        multiline: False
                        font_divider: ["/", 2]
                        background_normal: "app_media/textinput_normal.png"
                        background_active: "app_media/textinput_active.png"
                    # 
                    # This is just some white space
                    HB_Spacer_M:
                        height: 50
                    # 
                    # This Label is the login text for the homepage
                    Label:
                        bold: True
                        height: 40
                        text: "Password"
                        halign: "left"
                        size_hint: (1, None)
                        text_size: self.size
                        font_size: self.height / 1.3
                        color: (50/255, 50/255, 50/255, 1)
                    # 
                    # This is just some white space
                    HB_Spacer_M:
                        height: 20
                    # 
                    # This TextInput is the email input for the homepage
                    HB_TextInput:
                        size_hint: (1, None)
                        height: 100
                        multiline: False
                        font_divider: ["/", 2]
                        background_normal: "app_media/textinput_normal.png"
                        background_active: "app_media/textinput_active.png"
                    # 
                    # This is just some white space
                    HB_Spacer_M:
                        height: 50
                    # 
                    # This is the GridLayout for the sign up text
                    GridLayout:
                        cols: 2
                        height: 60
                        spacing: 10
                        size_hint: (None, None)
                        width: self.minimum_width
                        # 
                        # This is the description for the sign up text
                        Label:
                            size_hint: (None, 1)
                            size: self.texture_size
                            text: "Don't have an account?"
                            color: (50/255, 50/255, 50/255, 1)
                        # 
                        # This is the link for the sign up
                        HB_Label:
                            # Custom Parameters
                            radius: 100
                            hover: True
                            change_color: True
                            responsive_text: False
                            hover_color_t: (0/255, 161/255, 243/255, 1)
                            normal_color_t: (167/255, 105/255, 255/255, 1)
                            hover_color_b: (75/255, 184/255, 81/255, 0)
                            normal_color_b: (148/255, 90/255, 230/255, 0)
                            # Actual Parameters
                            text: "Sign Up"
                            size_hint: (None, 1)
                            size: self.texture_size
                            on_press: root.sign_up()
                            color: (167/255, 105/255, 255/255, 1)
