            # This GridLayout is for the layout logo and title of the screen
            GridLayout:
                rows: 1
                padding: (80, 0)
                spacing: (25, 0)
                size_hint: (None, 1)
                width: self.minimum_width
                # 
                # This Image is the logo for the app
                Image:
                    width: 60
                    size_hint: (None, 1)
                    source: "app_media/icon.png"
                # 
                # This Label is for the title of the header
                Label:
                    bold: True
                    size_hint: (None, .1)
                    color: (1, 1, 1, 1)
                    text: "Timer"
                    font_size: self.height / 3
                    width: self.texture_size[0]
