# Timer_Page is the name of the entire user interface for the timer page
<Timer_Page>:
    # 
    # This is the entire layout for the Timer Page
    GridLayout:
        cols: 1
        # 
        # This GridLayout is the layout for the header
        GridLayout:
            cols: 2
            size_hint: (1, None)
            height: root.header_height
            canvas.before:
                Color:
                    rgba: (1, 0, 0, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size
            # 
            # This GridLayout is for the layout logo and title of the screen
            GridLayout:
                rows: 1
                padding: (80, 0)
                spacing: (25, 0)
                size_hint: (None, 1)
                width: self.minimum_width
                # 
                # This Image is the logo for the app
                Image:
                    width: 60
                    size_hint: (None, 1)
                    source: "app/app_media/icon.png"
                # 
                # This Label is for the title of the header
                Label:
                    bold: True
                    size_hint: (None, .1)
                    color: (1, 1, 1, 1)
                    text: "Timer"
                    font_size: self.height / 3
                    width: self.texture_size[0]
            # 
            # This GridLayout is the layout for the user profile
            GridLayout:
                cols: 1   


        #  
        # This GridLayout is the layout for the body
        GridLayout:
            id: body
            cols: 3
            background_color: (250/255, 250/255, 250/255, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    pos: self.pos
                    size: self.size
            # 
            # This is just white space
            HB_Spacer:
                width: 200
                size_hint: (None, 1)
            # 
            # This GridLayout is the layout for the timer
            GridLayout:
                id: timer_body
                cols: 1
                # 
                # Just white space
                HB_Spacer:
                    height: 100
                # 
                # This GridLayout is the layout for the timers
                GridLayout:
                    id: timers_container
                    cols: 3
                    spacing: (50, 0)
                # 
                # This GridLayout is the layout for the presets
                GridLayout:
                    id: quick_timer_presets
                    cols: 1
                    height: 400
                    padding: (0, 100)
                    size_hint: (1, None) 
            # 
            # This GridLayout is the layout for the side navigation
            GridLayout:
                cols: 1
                width: 200
                size_hint: (None, 1)
                # 
                # Just white space
                HB_Spacer:
                    height: 150
                # 
                # This is the add image
                HB_Image:
                    # Custom parameters
                    hover: True
                    change_image: False
                    # Actual parameters
                    height: 35
                    size_hint: (1, None)
                    source: "app/app_media/add.png"
                # 
                # Just white space
                HB_Spacer:
                    height: 80
                # 
                # This is the edit image
                HB_Image:
                    # Custom parameters
                    hover: True
                    change_image: False
                    # Actual parameters
                    height: 45
                    size_hint: (1, None)
                    source: "app/app_media/edit.png"
                    on_press: root.toggle_edit_mode()
                # 
                # Just white space
                HB_Spacer:
                    height: 80
        # 
        # This GridLayout is the layout for the navigation
        GridLayout:
            id: timer_navigation
            cols: 1
            height: 120
            size_hint: (1, None)
            background_color: (250/255, 250/255, 250/255, 1)
            canvas.before:
                Color:
                    rgba: (1, 0, 0, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size
