#:kivy 2.1

# ------------------------------------------------------------------------------- #
#                                                                                 #
#                               Welcome Page Class                                #
#                                                                                 #
# ------------------------------------------------------------------------------- #

# Welcome_Page is the name of the entire user interface for the welcome screen
<Welcome_Page>:

    # This GridLayout is the layout for Welcome_Page
    GridLayout:
        cols: 1
        background_color: (1, 1, 1, 1)

        canvas.before:
            Color:
                rgba: self.background_color
            Rectangle:
                pos: self.pos
                size: self.size

        RelativeLayout:
            Label:
                underline: True
                text: "TecKnowfy Timer"
                color: (167/255, 105/255, 255/255, 1)
                pos_hint: {"center_x": .5, "center_y": .25}
                font_size: self.height / 15 + self.width / 100

        RelativeLayout:
            HB_Label:
                # Custom Parameters
                radius: 100
                hover: True
                change_color: True
                responsive_text: True
                font_divider: ["/", 8]
                hover_color_t: (1, 1, 1, 1)
                normal_color_t: (1, 1, 1, 1)
                hover_color_b: (75/255, 184/255, 81/255, 1)
                normal_color_b: (148/255, 90/255, 230/255, 1)
                # Actual Parameters
                text: "Continue"
                size_hint: (.15, .15)
                on_press: root.home_page_gt()
                pos_hint: {"center_x": .5, "center_y": .85}